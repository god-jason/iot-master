{
  "title": "组织",
  "template": "table",
  "toolbar": [
    {
      "label": "创建",
      "icon": "plus",
      "type": "button",
      "action": {
        "type": "page",
        "page": "iot/group-create"
      }
    },
    {
      "key": "keyword",
      "type": "text",
      "placeholder": "请输入关键字"
    },
    {
      "type": "button",
      "icon": "search",
      "label": "搜索",
      "action": {
        "type": "script",
        "script": "this.keyword=this.toolbar.value.keyword; this.search()"
      }
    }
  ],
  "keywords": [
    "id",
    "name",
    "description"
  ],
  "operators": [
    {
      "icon": "eye",
      "action": {
        "type": "page",
        "page": "iot/group-detail",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "icon": "edit",
      "action": {
        "type": "page",
        "page": "iot/group-edit",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "icon": "delete",
      "title": "删除",
      "confirm": "确认删除？",
      "action": {
        "type": "script",
        "script": "this.request.get('table/group/delete/'+data.id).subscribe(res=>{this.load()})"
      }
    }
  ],
  "columns": [
    {
      "key": "id",
      "label": "ID",
      "action": {
        "type": "page",
        "page": "iot/group-detail",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "key": "user_id",
      "label": "管理员ID"
    },
    {
      "key": "user",
      "label": "管理员"
    },
    {
      "key": "name",
      "label": "名称"
    },
    {
      "key": "disabled",
      "label": "禁用",
      "type": "boolean"
    },
    {
      "key": "created",
      "label": "日期",
      "type": "date"
    }
  ],
  "search_api": "table/group/search",
  "joins": [
    {
      "table": "user",
      "local_field": "user_id",
      "foreign_field": "id",
      "field": "name",
      "as": "user"
    }
  ]
}